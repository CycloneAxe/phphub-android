<resources>

    <style name="ProgressBarStyle" parent="@android:style/Widget.Holo.ProgressBar.Horizontal"/>

    <style name="ListProgressBarStyle" parent="@android:style/Widget.Holo.ProgressBar" />

    <style name="list_topic_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="list_topic_des">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#C5C5C5</item>
    </style>

    <style name="me_list_items">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#A7A7A7</item>
    </style>
    
    <style name="text_normal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="topic_username">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_7b</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="topic_sign">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_9b</item>
    </style>

    <style name="topic_detail_reply_count">
        <item name="android:textColor">#7B7676</item>
    </style>

    <style name="profile_username">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_6b</item>
    </style>

    <style name="profile_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_91</item>
    </style>

    <style name="dialogWindow" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="publish_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tab_text_enabled</item>
        <item name="android:textColorHint">@color/gray_ac</item>
    </style>

    <style name="settings_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/gray_91</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">18dp</item>
    </style>
</resources>
